NAME = corewar
CC = gcc
MAIN_DIRECTORY = corewar_srcs

### MAIN FLAGS ###

ifeq ($(DEBUG),yes)
	CFLAGS = -Wall -Wextra -Werror -std=c99 -g -O0 -fsanitize=address
else
	CFLAGS = -Wall -Wextra -Werror -std=c99
endif

### SOURCES ###

SRC_CORE = vm dump fill_champions tools cycle_manager process_tools \
	      op_fork op_ld op_ldi op_logical op_math op_misc op_st op_sti op_tools parsing read_file check_file

SRC_LIST = $(SRC_CORE)
VPATH = $(MAIN_DIRECTORY)/core

## HEADERS

HEADERS = vm.h

### LIBRAIRIES ###

LIB_DIR = .
_LIBFT = libft
LIBFT = $(addprefix $(LIB_DIR)/, $(_LIBFT))

### ~~~~~~~~~~ ###

SRC = $(addsuffix .c, $(SRC_LIST))
OBJ_DIR = $(MAIN_DIRECTORY)/objs
TMP = $(basename $(notdir $(SRC)))
OBJ = $(addprefix $(OBJ_DIR)/, $(addsuffix .o, $(TMP)))

IFLAGS = -I$(LIBFT)/includes -I$(MAIN_DIRECTORY)
LDFLAGS = -L$(LIBFT) -lft

.PHONY: all clean fclean re help

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ) $(LDFLAGS)

$(OBJ_DIR)/%.o: %.c $(HEADERS)
	$(CC) -c $(CFLAGS) -o $@ $< $(IFLAGS)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

help:
	@echo
	@echo "Programm $(NAME)"
	@echo
	@echo "--------------------------------------------------------------------------"
	@echo " Disp rules."
	@echo
	@echo " all     : Compile the program $(NAME) into $(BINDIR) directory."
	@echo " re      : Recompile all objets of the programm."
	@echo " clean   : Remove objects."
	@echo " fclean  : Remove objects and programm."
	@echo " help    : Display this."
	@echo "--------------------------------------------------------------------------"
